<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://sscaption"
        messagesPack="com.itserv.taskchanger.web.screens">
    <layout>
        <hbox spacing="true" align="MIDDLE_CENTER">
            <label value="String Sort" align="TOP_CENTER" width="auto"/>
        </hbox>
        <grid spacing="true" align="TOP_CENTER">
            <columns count="2"/>
            <rows>
                <row>
                    <label value="Enter words"/>
                    <textField id="wordsField">
                        <validators>
                            <notNull message="words null"/>
                        </validators>
                    </textField>
                </row>
                <row>
                    <label value="Enter parts"/>
                    <textField id="partsField">
                        <validators>
                            <notNull message="parts null"/>
                        </validators>
                    </textField>
                </row>
                <row>
                    <label value="Result"/>
                    <textField id="resultField" editable="false" datatype="string"/>
                </row>
                <row>
                    <buttonsPanel>
                        <button id="saveButton" caption="Save" enable="false"/>
                        <upload id="upFile"  permittedExtensions=".txt"/>
                        <button id="computeButton" caption="Compute" enable="false"/>
                    </buttonsPanel>
                </row>
            </rows>
        </grid>
    </layout>
</window>